############################################
# Application Name
############################################
spring.application.name=currency-conversion-service

############################################
# Active Profile (TEST)
############################################
spring.profiles.active=test

############################################
# Database Configuration (TEST DB / H2 or MySQL)
############################################
# ✅ Use H2 DB in memory (recommended for testing)
spring.datasource.url=jdbc:h2:mem:currency-test-db
spring.datasource.driver-class-name=org.h2.Driver
spring.datasource.username=test
spring.datasource.password=test

# If you want MySQL instead of H2, comment above and use below:
# spring.datasource.url=jdbc:mysql://localhost:3306/srav_test
# spring.datasource.username=test_user
# spring.datasource.password=test_password
# spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

############################################
# JPA / Hibernate Settings
############################################
spring.jpa.hibernate.ddl-auto=create-drop
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.H2Dialect
# If using MySQL for test, replace with MySQLDialect

############################################
# Server Configuration
############################################
server.port=0   # Random port for test

############################################
# Eureka — Disabled for testing
############################################
eureka.client.enabled=false

############################################
# Actuator (optional)
############################################
management.endpoints.web.exposure.include=*

############################################
# Distributed Tracing (Zipkin) - disabled for testing
############################################
management.tracing.enabled=false

############################################
# RabbitMQ Disabled in Test Profile
############################################
spring.rabbitmq.listener.simple.auto-startup=false
spring.rabbitmq.listener.direct.auto-startup=false
